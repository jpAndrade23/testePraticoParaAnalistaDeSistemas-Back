generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Curso{
  id Int @id @default(autoincrement()) @unique
  nome String
  duracao Float
  tipo String
  descricao String
  modalidade String
  valor Float
  futurosAlunos Futuro_Aluno[]
}


model Futuro_Aluno{
  id Int @id @default(autoincrement()) @unique
  nome String
  CPF String @unique
  telefone String
  email String
  CEP String 
  dataNascimento DateTime @db.Date
  imagemDoocumento String
  cursoId Int
  cursoDeInteresse Curso @relation(fields: [cursoId], references: [id])
}